<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="horizontal">

    <!-- left -->
    <fragment
        android:id="@+id/fragment_left"
        android:name="com.example.dashboard_kv.fragment.window.PlaceholderFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="2dp"

        />

    <!-- right -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <fragment
            android:id="@+id/fragment_right_top"
            android:name="com.example.dashboard_kv.fragment.window.MakeFilesWindow"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="2dp"/>

        <fragment
            android:id="@+id/fragment_right_bottom"
            android:name="com.example.dashboard_kv.fragment.window.PlaceholderFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_margin="2dp"
            tools:ignore="Suspicious0dp" />

    </LinearLayout>

</LinearLayout>


