<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/widget_file_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_marginTop="2dp"
    >

    <!-- file image -->
    <ImageView
        android:id="@+id/widget_file_view_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@color/selected_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>
    <!-- file name -->
    <TextView
        android:id="@+id/widget_file_view_name"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:textSize="6dp"
        android:textColor="@color/sys_blue"
        android:gravity="center_horizontal"
        android:paddingVertical="2dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/widget_file_view_image">

    </TextView>



</androidx.constraintlayout.widget.ConstraintLayout>