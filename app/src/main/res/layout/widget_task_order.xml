<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- 行号 -->
    <TextView
        android:id="@+id/tv_rowIndex"
        android:text="行号"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:textColor="@color/sys_blue"
        android:background="@color/sys_white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_project_no"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <!-- 工程编号 -->
    <TextView
        android:id="@+id/tv_project_no"
        android:layout_height="match_parent"
        android:layout_width="0dp"

        android:textColor="@color/sys_blue"

        app:layout_constraintLeft_toRightOf="@id/tv_rowIndex"
        app:layout_constraintRight_toLeftOf="@id/tv_task_no"

        android:background="@color/sys_white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"



        />

    <!-- 任务编号 -->
    <TextView
        android:id="@+id/tv_task_no"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:textColor="@color/sys_blue"
        android:background="@color/sys_white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintRight_toLeftOf="@id/tv_createTime"
        app:layout_constraintLeft_toRightOf="@id/tv_project_no"
        />

    <TextView
        android:id="@+id/tv_createTime"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:textColor="@color/sys_blue"
        android:background="@color/sys_white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_task_no"
        />

