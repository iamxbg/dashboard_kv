<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- 行号 -->
    <TextView
        android:id="@+id/tv_rowIndex"
        android:text="行号"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:textColor="@color/sys_blue"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <!-- 任务名称 -->
    <TextView
        android:id="@+id/tv_taskName"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textColor="@color/sys_blue"
        app:layout_constraintLeft_toRightOf="@id/tv_rowIndex"
        android:background="@color/sys_white"
        app:layout_constraintRight_toLeftOf="@id/tv_link_taskInfo"
        />

    <!-- 任务详情按钮 -->
    <TextView
        android:id="@+id/tv_link_taskInfo"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textColor="@color/sys_blue"
        android:text="任务详情"

        app:layout_constraintLeft_toRightOf="@id/tv_taskName"
        app:layout_constraintRight_toRightOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>