<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- row index -->
    <TextView
        android:id="@+id/tv_row_index"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintRight_toLeftOf="@id/tv_task_name"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="#CC2D63"
        app:layout_constraintHorizontal_weight="1"
        >

    </TextView>

    <!-- task basic info -->
    <TextView
        android:id="@+id/tv_task_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="TEXT_WORD"
        app:layout_constraintLeft_toRightOf="@id/tv_row_index"
        app:layout_constraintRight_toLeftOf="@id/tv_task_detail"
        android:background="#DCAF2A"
        app:layout_constraintHorizontal_weight="5"
        >

    </TextView>
    <!-- detail Link -->
    <TextView
        android:id="@+id/tv_task_detail"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toRightOf="@id/tv_task_name"
        app:layout_constraintRight_toRightOf="parent"
        android:text="任务详情"
        android:background="#16F31F"
        app:layout_constraintHorizontal_weight="2"
        android:letterSpacing="0.3">

    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>