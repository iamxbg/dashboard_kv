<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- row index -->
    <TextView
        android:id="@+id/tv_row_index"
        android:paddingLeft="10dp"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        app:layout_constraintRight_toLeftOf="@id/tv_task_name"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/sys_blue"
        >

    </TextView>

    <!-- task basic info -->
    <TextView
        android:id="@+id/tv_task_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="TEXT_WORD"
        android:textColor="@color/sys_blue"
        app:layout_constraintLeft_toRightOf="@id/tv_row_index"
        app:layout_constraintRight_toLeftOf="@id/tv_task_detail"

        >

    </TextView>

    <!-- detail Link -->
    <TextView
        android:id="@+id/tv_task_detail"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="任务详情"
        android:textColor="@color/sys_white"
        android:background="@color/sys_blue"
        android:layout_marginEnd="10dp"
        app:layout_constraintHorizontal_weight="2"
        android:letterSpacing="0.3">

    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>